<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:background="#2196F3"
            android:paddingHorizontal="48px"
            android:paddingVertical="48px"
            android:text="Shared Preference App"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32px"
            android:layout_marginVertical="32px"
            android:ems="10"
            android:hint="Type something here"
            android:inputType="text"
            android:paddingHorizontal="46px"
            android:paddingVertical="32px" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32px"
            android:minHeight="48dp"
            android:paddingVertical="32px"
            android:text="Save input after restart" />

    </LinearLayout>

</RelativeLayout>